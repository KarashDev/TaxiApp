<Window x:Class="TaxiApp.Customer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaxiApp.Customer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
     <Grid>
          <TextBox x:Name="txtbox_Login"  HorizontalAlignment="Center" Margin="0,139,0,0" TextWrapping="Wrap" Text="Имя/логин" VerticalAlignment="Top" Width="168" Height="33"/>
          <TextBox x:Name="txtBox_Password" HorizontalAlignment="Center" Margin="0,184,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="168" Height="33"/>
          <Button x:Name="btn_Registrate" Content="Зарегистрировать" HorizontalAlignment="Left" Margin="262,238,0,0" VerticalAlignment="Top" Click="btn_Registrate_Click" Height="38" Width="129"/>
          <Button x:Name="btn_Login" Content="Войти" HorizontalAlignment="Left" Margin="420,241,0,0" VerticalAlignment="Top" Click="btn_Login_Click" Height="35" Width="129"/>
          <Label x:Name="lbl_CurrentUserName" Content="Заказчик: " HorizontalAlignment="Left" Margin="279,86,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
     </Grid>
</Window>
